    if [[ -n "$BW_SESSION" ]] && command -v jq >/dev/null 2>&1; then
      if bw status 2>/dev/null | grep -q "authenticated"; then
        export GITHUB_ACCESS_TOKEN="$(bitwardenField 'GITHUB_TOKEN' '.CLI.value' 2>/dev/null)"
      fi
    fi
  fi
fi
